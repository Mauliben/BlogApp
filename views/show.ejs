<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached ">
        
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>" >
            <br>
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <br>
            <div class="description">
                <p><%- blog.body %></p> 
<!--   use - instead of = between <% %> because it takes body as code-->
<!--     not as a simple text..will run whatever html code is there inside blog text.-->
            </div>
            <br>
            <a class="ui blue inverted button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red inverted button">Delete</button>
            </form>
            
        </div>
    </div>
    
</div>
<% include ./partials/footer %>

    